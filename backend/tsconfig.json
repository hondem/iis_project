{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": ["es5", "es6", "es7"],
    "module": "commonjs",
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": [".vscode", "node_modules"]
}